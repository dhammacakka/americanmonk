{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <!-- Channel metadata here -->
    {{ range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      <!-- Other item elements here -->
      {{ if .Params.featuredImage }}
        {{- $ftimgsrc := "" -}}
        {{- if .Resources -}}
          {{- $ftimgsrc = .Resources.GetMatch .Params.featuredImage -}}
          {{- if $ftimgsrc -}}
            {{- $ftimgsrc = $ftimgsrc.Resize "480x" -}}
          {{- end -}}
        {{- else -}}
          {{- $ftimgsrc = resources.Get .Params.featuredImage -}}
          {{- if $ftimgsrc -}}
            {{- $ftimgsrc = $ftimgsrc.Resize "480x" -}}
          {{- end -}}
        {{- end -}}
        <description>{{ .Summary | html }}</description>
        <content:encoded>{{ "<![CDATA["  | safeHTML  }}{{ printf "<img src=\"%s\" alt=\"featured image\" />" $ftimgsrc.Permalink | safeHTML }}{{ .Summary | safeHTML }}{{ "]]>" | safeHTML  }}</content:encoded>
      {{ else }}
        <description>{{ .Summary | html }}</description>
        <content:encoded>{{ "<![CDATA["  | safeHTML  }}{{ .Summary | safeHTML }}{{ "]]>" | safeHTML  }}</content:encoded>
      {{ end }}
    </item>
    {{ end }}
  </channel>
</rss>
